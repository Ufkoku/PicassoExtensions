<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/downscaleTransformationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="Downscale to max available size"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/downscaleTransformationBefore"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@id/downscaleTransformationTitle"
                    android:layout_toLeftOf="@+id/downscaleTransformationCenter" />

                <View
                    android:id="@+id/downscaleTransformationCenter"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_centerHorizontal="true" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/downscaleTransformationAfter"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@id/downscaleTransformationTitle"
                    android:layout_toRightOf="@+id/downscaleTransformationCenter"
                    android:scaleType="centerInside" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/circleTransformationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="Circle transformation"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/circleTransformationBefore"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@id/circleTransformationTitle"
                    android:layout_toLeftOf="@+id/circleTransformationCenter" />

                <View
                    android:id="@+id/circleTransformationCenter"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_centerHorizontal="true" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/circleTransformationAfter"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@id/circleTransformationTitle"
                    android:layout_toRightOf="@+id/circleTransformationCenter"
                    android:scaleType="centerInside" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>